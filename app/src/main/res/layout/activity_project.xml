<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toNightDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Panisheola Indira Smriti Vidyapith"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/school"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/pisv"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Description"
        android:textSize="20sp" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="This school, one of the finest one in the district is the fisrt CBSE affialiated school in Hooghly District. It can boast of its talented students who are the flag bearer of success in recent times for the country.It not only gives quality education but makes the students future ready!"/>

        </android.support.v4.widget.NestedScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Address"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Vill + PO - Panisheola"
        android:textSize="15sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Dist - Hooghly"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="PIN 712405"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Contact"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Phone:03212-242-879"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Email:pisv.cbse.haripal@gmail.com"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Website"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="www.pisv.org"
        android:textColor="#124578"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Gallery"
        android:textSize="20sp"/>
    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sch1"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:src="@drawable/pisv"/>
            <ImageView
                android:id="@+id/sch2"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:src="@drawable/photo"
                android:layout_toRightOf="@+id/sch1"/>
            <ImageView
                android:id="@+id/sch3"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:src="@drawable/p1"
                android:layout_toRightOf="@+id/sch2"/>
            <ImageView
                android:id="@+id/sch4"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:src="@drawable/pisv"
                android:layout_toRightOf="@+id/sch3"/>

        </RelativeLayout>
    </HorizontalScrollView>
</LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
